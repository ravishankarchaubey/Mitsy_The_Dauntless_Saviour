<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgq"
    >
    <TextView
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question"
        android:id="@+id/que"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/ans1"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/que"
        android:layout_alignLeft="@+id/ans3"
        android:layout_alignStart="@+id/ans3"
        android:layout_toLeftOf="@+id/ans2"
        android:layout_toStartOf="@+id/ans2" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/ans2"
        android:layout_alignTop="@+id/ans1"
        android:layout_alignRight="@+id/level"
        android:layout_alignEnd="@+id/level" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/ans3"
        android:layout_below="@+id/ans1"
        android:layout_toStartOf="@+id/ans2"
        android:layout_toLeftOf="@+id/ans2" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/ans4"
        android:layout_below="@+id/ans2"
        android:layout_toRightOf="@+id/ans3"
        android:layout_alignRight="@+id/ans2"
        android:layout_alignEnd="@+id/ans2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:id="@+id/sc"
        android:layout_below="@+id/ans3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp" />

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level : 0"
        android:id="@+id/level"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
